<main>
    <div class="row">
        {{#with navigation}}
        <div class="card">
            <div class="nav">
                {{#each links}}
                <div class="nav-item">
                    <a href="{{href}}" class="nav-link {{#if @last}}disabled{{/if}}">{{text}}</a>                     
                </div>
                {{/each}}
            </div>  
        </div>   
        {{/with}}
    </div>
    <div class="row">
        {{#with formBlock}}
            <div class="col-8">
                <h1 class="mt-5 mb-4">{{header}}</h1>
                    {{#with rating}}
                        <p>{{title}} - {{value}}</p>
                    {{/with}}
            
                {{#with actionBlock}}
                    <div class="nav nav-tabs">
                        {{#each tabs}}
                            {{#if isActive}}
                                <div class="nav-item">
                                    <a href="#" class="nav-link active">{{text}}</a> 
                                </div>
                                {{else}}
                                <div class="nav-item">
                                    <a href="#" class="nav-link">{{text}}</a> 
                                </div>
                            {{/if}} 
                        {{/each}}
                    </div> 

                    <hr class="mt-5 mb-5">      
                            
                
                    {{#with report}}  
                        <div class="card">
                            <div class="card-body">
                                <p>{{title}}</p>
                                    {{#with button}}
                                        <a href="{{linl}}" class="btn btn-secondary">{{text}}</a>
                                    {{/with}}
                            </div>
                        </div>
                    {{/with}}
                {{/with}} 
                
                <hr class="mt-5 mb-5">
                {{#with feedbackBlock}} 
                    <h2 class="mb-5">{{title}}</h2>
                        {{#each buttons}}
                            {{#if isWarning}}
                                <a href="{{link}}" class="btn btn-warning">{{text}}</a>
                            {{/if}}
                            {{#if isSuccess}}
                                <a href="{{link}}" class="btn btn-success">{{text}}</a>
                            {{/if}}
                            {{#if isDanger}}
                                <a href="{{link}}" class="btn btn-danger">{{text}}</a>
                            {{/if}}    
                        {{/each}}
                {{/with}}   
            </div>
            <div class="col-4">
                {{#with goodsInfo}}
                    <div class="card mt-5">
                        <div class="card body">
                            <img src="{{photo}}" alt="photo" width="110" high="100" class="pt-2 ps-2">
                            <p class="ps-2"><b>{{name}}</b></p>
                        </div>
                    </div>
                    <div class="card mt-3">
                        <div class="card-body">
                            <div>{{price}}</div>
                                {{#if inMarket}}
                                    <p>Є в наявності</p>
                                {{/if}}
                                {{#each buttons}}
                                    {{#if isPrimary}}
                                        <div>
                                            <a href="{{link}}" class="btn btn-primary mb-1">{{text}}</a>
                                        </div>
                                    {{/if}}  
                                    {{#if isSecondary}}
                                        <div>
                                            <a href="{{link}}" class="btn btn-secondary mt-1">{{text}}</a>
                                        </div>
                                    {{/if}}   
                                {{/each}}
                        </div>
                    </div>
                    <div class="card mt-3">
                        <div class="card-body">
                            {{#with seller}}
                                <div>{{title}} - <b>{{value}}</b></div>
                            {{/with}}
                        </div>
                    </div>
                {{/with}}
            </div>
        {{/with}}
    </div>

    <hr class="mt-5 mb-5">

    <div>
        {{> reviewItem}}
    </div>

    <div>
        {{> footerShop}}
    </div>
</main>