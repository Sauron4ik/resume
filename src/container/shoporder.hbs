<main>
    <div class="row">
        {{#with navigation}}
        <div class="card">
            <div class="nav">
                {{#each links}}
                <div class="nav-item">
                    <a href="{{href}}" class="nav-link {{#if @last}}disabled{{/if}}">{{text}}</a>                     
                </div>
                {{/each}}
            </div>  
        </div>   
        {{/with}}
    </div>
   
    <h1 class="mt-5 mb-4">{{header}}</h1>
    
        {{#with contacts_data}}
            <h2 class="mt-5">{{title}}</h2>
            
            {{#each buttons}}
                {{#if isPrimary}}
                    <button class="btn btn-warning mb-3 my-3">{{text}}</button>
                {{/if}}
                {{#if isOutline}}
                    <button class="btn btn-outline-warning mb-3 mt-3 ms-3">{{text}}</button>
                {{/if}}
            {{/each}}

            <div class="row">
                    {{#with form}}
                        <div class="col-8">
                            <div class="row">
                                    {{#with input}}
                                        {{#with surname}}
                                            <div class="col-6 mb-3">
                                                <label class="form-label">{{label}}</label>
                                                <input class="form-control text-muted" value="{{placeholder}}"> 
                                                <div class="form-text">{{caption}}</div>
                                            </div>
                                        {{/with}}
                                        {{#with name}}
                                            <div class="col-6 mb-3">
                                                <label class="form-label">{{label}}</label>
                                                <input class="form-control text-muted" value="{{placeholder}}">
                                                <div class="form-text">{{caption}}</div>
                                            </div>
                                        {{/with}}
                                        {{#with phone}}
                                            <div class="col-6 mb-3">
                                                <label class="form-label">{{label}}</label>
                                                <input class="form-control text-muted" value="{{placeholder}}">
                                                <div class="form-text">{{caption}}</div>
                                            </div>
                                        {{/with}}
                                        {{#with email}}
                                            <div class="col-6 mb-3">
                                                <label class="form-label">{{label}}</label>
                                                <input class="form-control text-muted" value="{{placeholder}}">
                                                <div class="form-text">{{caption}}</div>
                                            </div>
                                        {{/with}}
                                    {{/with}}
                                    
                            </div>
                                    <hr>
                                    {{#each switch}}
                                        {{#if isActive}}
                                                <label class="form-label">{{text}}</label>
                                                <div class="form-check form-switch">
                                                    <input type="checkbox"  class="form-check-input" checked>
                                                </div>
                                            {{else}}
                                                <label class="form-label">{{text}}</label>
                                                <div class="form-check form-switch">
                                                    <input type="checkbox"  class="form-check-input">
                                                </div>
                                        {{/if}}
                                    {{/each}}
                                    <hr />
                            
            
                            
                                 {{/with}}
                    {{/with}}
                            
                        {{#with delivery}}

                         <h3>{{title}}</h3>
                            <div class="row">
                                <div class="col-12">
                                    <div class="card">
                                        <div class="card-body">
                                                <div class="row">
                                                    {{#each select}}
                                                        <div class="col-6">
                                                            <div class="mb-3">
                                                                <label class="form-label">{{label}}</label>
                                                                <select class="form-select">
                                                                    <option class="text-muted">{{placeholder}}</option>
                                                                    {{#each options}}
                                                                        <option value="{{value}}">{{text}}</option>
                                                                    {{/each}}    
                                                                </select>
                                                            </div>
                                                        </div>
                                                    {{/each}}
                                                </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        

                            
                                <div class="mt-2">
                                    {{#each delivery_type}}
                                    <div class="form-check">
                                        <input type="radio" class="form-check-input">
                                        <label class="form-check-label">{{type}}</label>
                                    </div>
                                    {{/each}}
                                </div>
                                

                            <hr />
                            <div>
                                {{#with payment}}
                                    <h3>{{title}}</h3>
                                        {{#each list}}
                                            <div class="form-check">
                                                <input name="delivery_type" type="radio" class="form-check-input">
                                                <label class="form-check-label">{{type}}</label>
                                                    {{#if description}}
                                                        <p class="form-text">{{description}}</p>
                                                    {{/if}}
                                            </div>
                                        {{/each}}
                                {{/with}}
                            </div> 
                            <hr />
                            {{#with contact}}
                                <h3>{{title}}</h3>
                                    <div class="row">
                                            
                                                {{#with surname}}
                                                    <div class="col-6 mb-3">
                                                        <label class="form-label">{{label}}</label>
                                                        <input class="form-control text-muted" value="{{placeholder}}"> 
                                                        <div class="form-text">{{caption}}</div>
                                                    </div>
                                                {{/with}}
                                                {{#with name}}
                                                    <div class="col-6 mb-3">
                                                        <label class="form-label">{{label}}</label>
                                                        <input class="form-control text-muted" value="{{placeholder}}">
                                                        <div class="form-text">{{caption}}</div>
                                                    </div>
                                                {{/with}}
                                                {{#with phone}}
                                                    <div class="col-6 mb-3">
                                                        <label class="form-label">{{label}}</label>
                                                        <input class="form-control text-muted" value="{{placeholder}}">
                                                        <div class="form-text">{{caption}}</div>
                                                    </div>
                                                {{/with}}
                                                {{#with email}}
                                                    <div class="col-6 mb-3">
                                                        <label class="form-label">{{label}}</label>
                                                        <input class="form-control text-muted" value="{{placeholder}}">
                                                        <div class="form-text">{{caption}}</div>
                                                    </div>
                                                {{/with}}
                                    </div> 
                            {{/with}}
                                        
                                        <hr />
                                {{#with coment}}
                                    <div class="col-12">
                                        <label class="form-label">{{label}}</label>
                                        <input class="form-control" style="text-muted" placeholder="{{placeholder}}">
                                    </div>    
                                {{/with}}    
                        {{/with}}

                        <hr />
                        {{#with coupon}}
                         <h3>{{title}}</h3>
                                <div class="col-12">
                                    {{#each select}}                                                      
                                        <div class="mb-3">
                                            <label class="form-label">{{label}}</label>
                                            <select class="form-select">
                                                <option class="text-muted">{{placeholder}}</option>
                                                {{#each options}}
                                                    <option value="{{value}}">{{text}}</option>
                                                {{/each}}    
                                            </select>
                                        </div>

                                    {{/each}}
                                </div>
                                {{#each add}}
                                    
                                    <div class="col-12">
                                        <label class="form-label">{{label}}</label>
                                        <input class="form-control" style="text-muted" placeholder="{{placeholder}}">
                                        <div class="form-text ">{{caption}}</div>
                                    </div>    
                                 
                                {{/each}}

                        {{/with}}

                        </div>
                    
                    <div class="col-4">
                        <div class="card">
                            {{#each action_block}}
                            <div class="card-body">
                                {{#if isSuccess}}
                                <button class="btn btn-success ps-3">{{this.text}}</button>
                            
                                {{else isDanger}}
                                <div><button class="btn btn-danger">{{this.text}}</button></div>
                
                                {{else isInfo}}
                                <div class=""><button class="btn btn-info">{{this.text}}</button></div>
                                {{/if}}
                            </div>
                            {{/each}}
                        </div>
                        <div class="card mt-3">
                            {{#with total}}
                            <h3 class="ps-2 pt-2">{{title}}</h3>
                            {{#each item_list}}
                            <div class="ps-2">{{name}}: {{price}}</div>
                            {{/each}}
                            
                            <div class="ps-2 pe-2"><hr /></div>

                            {{#each additional_info}}
                            <div class="ps-2">{{text}}: {{value}}</div>
                            {{/each}}
                            <div class="ps-2 pe-2"><hr /></div>
                            {{#with total_price}}
                                <div class="ps-2">{{text}}: {{value}}</div>
                            {{/with}}
                            <div class="ps-2 pe-2"><hr /></div>
                            {{#each button}}
                            {{#if isPrimary}}
                            <button class="btn btn-primary ms-2 me-2 mb-2">{{text}}</button>
                            {{else isOutline}}
                            <button class="btn btn-outline-primary mt-2 ms-2 me-2 mb-2">{{text}}</button>
                            {{/if}}
                            {{/each}}

                            {{/with}}
                        </div>
                    </div>
            </div>
</main>