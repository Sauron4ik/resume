<main>
    {{#with navigation}}
        <div class="card mb-4">
            <div class="nav">
            {{#each links}}
                <div class="nav-item">
                     <a href="{{href}}" class="nav-link {{#if @last}}disabled{{/if}}">{{text}}</a>                     
                </div>
           {{/each}}
            </div>  
        </div>   
    {{/with}}
    {{#with header}}
        <h1 class="mt-5">{{title}}</h1>
        {{#with button}}
            <a href="{{link}}" class="btn btn-outline-secondary mt-2 mb-5">{{text}}</a>
        {{/with}}
    {{/with}}

    <hr class="mt-3 mb-5">

    <div>
        {{> cartGoodsItem}}
    </div>

    <hr class="mt-5 mb-5">
    {{#with total}}
        <div>
            <h3>{{title}}</h3>
        </div>
        <div class="display-4">{{amount}}</div>
        <p>{{delivery}}</p>
        {{#each buttons}}
            {{#if isSuccess}}
                <div>
                    <a href="{{link}}" class="btn btn-success mb-3">{{text}}</a>
                </div>
            {{/if}}
            {{#if isOutline}}
                <div>
                    <a href="{{link}}" class="btn btn-outline-success">{{text}}</a>
                </div>
            {{/if}}
        {{/each}}
    {{/with}}

</main>