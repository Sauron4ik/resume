<footer>
    <div class="card bg-success mt-3">
      <div class="card-body d-flex flex-column align-items-center">
        {{#with service}}
          <h2 class="text-center">{{title}}</h2>
          <p class="text-center">{{description}}</p>
            {{#each buttons}}
              <a href="{{link}}" class="btn btn-primary text-center">{{text}}</a>
            {{/each}}
        {{/with}}
      </div>
    </div>
    <hr />
  <div class="row">
    {{#each footer}}
      <div class="col">
        {{#each this}}
          <a href="{{this.link}}" style="display: block; text-decoration: none;">{{this.text}}</a>
        {{/each}}
      </div>
    {{/each}}
  </div>
</footer>