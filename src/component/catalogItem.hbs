<div class="row">
{{#each goodsList}}
        <div class="col-6">
            <div class="card text-bg-light">
                <img class="card-img-top" src="{{img}}" alt="photo">
                <div class="card-body">
                {{#if isHot}}
                    {{#if isNew}}
                        <h5 class="card-title">{{title}} <span class="badge text-bg-warning rounded-pill">Hot!</span> <span class="badge text-bg-primary rounded-pill">New</span></h5>
                        {{else}}
                        <h5 class="card-title">{{title}} <span class="badge text-bg-warning rounded-pill">Hot!</span></h5>
                    {{/if}}
                    {{else}}
                    {{#if isNew}}
                        <h5 class="card-title">{{title}} <span class="badge text-bg-primary rounded-pill">New</span></h5>
                    {{else}}
                        <h5 class="card-title">{{title}}</h5>
                    {{/if}}
                {{/if}}

                {{#if isFast}}
                    <button class="btn btn-success mb-3 mt-1">Швидка доставка</button>
                {{/if}}

                {{#if isFree}}
                    <button class="btn btn-secondary">Безкоштовна доставка</button>
                {{/if}}
                    <p><b>{{name}}</b></p>
                    {{#with review}}
                        <p>{{amount}} {{text}}</p>
                    {{/with}}
                    <h4><b>{{price}}</b></h4>
                    <p>{{delivery}}</p>
                    {{#each buttons}}
                        <div class="mb-3">
                        {{#if isPrimary}}
                            <a href="{{link}}" class="btn btn-primary">{{text}}</a>
                        {{/if}}
                        {{#if isSecondary}}
                            <a href="{{link}}" class="btn btn-secondary">{{text}}</a>
                        {{/if}}
                        </div>
                    {{/each}}
                    {{#each characteristics}}
                        <ul>
                            <li>{{title}} - {{value}}</li>
                        </ul>
                    {{/each}}
                </div>
            </div>
        </div>    
{{/each}}
</div>